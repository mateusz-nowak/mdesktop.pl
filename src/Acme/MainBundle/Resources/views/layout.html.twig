<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}mdesktop.pl{% endblock %}</title>
{% stylesheets '@AcmeMainBundle/Resources/public/css/*' %}
		<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
	
    <div id="header">
        <div id="logo">
        	<a href="{{ path('root') }}">
            	<img src="{{ asset('images/logo.png') }}" />
            </a>
        </div>
        
        <div id="auth">
        	{% include "AcmeMainBundle::user.html.twig" %}
        </div>
        
        <div id="menu">
    		{{ knp_menu_render('AcmeMainBundle:Builder:mainMenu') }}
    	</div>
    </div>
	
    <div id="container">
        <div id="shoutbox">
            <span class="heading">Rozmowy prowadzone przez użytkowników serwisu</span>
            
    		{% render 'AcmeMainBundle:Shoutbox:index' %}
    	</div>

    	<div id="userSideBar">
    		<h1>Mp3</h1>

    		{% include 'AcmeMainBundle:Track:searchForm.html.twig' %}
        </div>

        <div id="contentBar">
    		<div id="navigation">
    			{{ knp_menu_render('AcmeMainBundle:Builder:navigation')|raw }}
			</div>

        	{% include "AcmeMainBundle::flash.html.twig" %}

        	<div id="content">
        		{% block content %}{% endblock %}
        	</div>
        </div>

        <div class="clearfix"></div>

        <div id="footer">
        {% block footer %}
            {{ tinymce_init() }}
            <img src="/images/footer.png" id="footerLinks" />
            <span id="footerBar">
            	{% include 'AcmeMainBundle::footer.html.twig' %}
            </span>
            <div class="clearfix"></div>
        {% endblock %}
        </div>
        
    </div>
    </body>
</html>
